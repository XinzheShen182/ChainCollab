{
    "actions": {
        "updateCredentials": "assign(({ context, event }) => {return {username: event.username,password: event.password}})",
        "clearError": "(context) => {context.error = null;}",
        "logSuccess": "(context) => {console.log('登录成功！用户名:', context.context.username);}",
        "logFailure": "(context, event) => {console.log('登录失败！错误信息:', context.error);}",
        "logLoading": "() => {console.log('正在登录...');}"
    },
    "guards": {
        "isFormValid": "(context, event) => {return context.username.trim() !== '' && context.password.trim() !== '';}"
    }
}